{
	"name": "FFI",
	"version": "1.0.0",
	"descriptionmsg": "ffi-desc",
	"type": "parserhook",
	"author": [
		"Marijn van Wezel"
	],
	"url": "https://www.mediawiki.org/wiki/Extension:FFI",
	"license-name": "GPL-2.0-or-later",
	"requires": {
		"MediaWiki": ">= 1.35.0",
		"platform": {
			"php": ">=7.3"
		}
	},
	"config": {
		"FFIEngines": {
			"value": {
				"py": {
					"class": "MediaWiki\\Extension\\FFI\\Engines\\Python\\PythonEngine"
				}
			}
		},
		"FFIEnableCodeEditor": {
			"value": true
		}
	},
	"namespaces": [
		{
			"id": 7670,
			"constant": "NS_SCRIPT",
			"name": "Script",
			"protection": "ffi-edit-script",
			"defaultcontentmodel": "script"
		},
		{
			"id": 7671,
			"constant": "NS_SCRIPT_TALK",
			"name": "Script_talk"
		}
	],
	"AutoloadNamespaces": {
		"MediaWiki\\Extension\\FFI\\": "includes/"
	},
	"ContentHandlers": {
		"script": "MediaWiki\\Extension\\FFI\\MediaWiki\\ContentHandlers\\ScriptContentHandler"
	},
	"ExtensionMessagesFiles": {
		"FFIMagic": "FFI.magic.php"
	},
	"GroupPermissions": {
		"user": {
			"ffi-edit-script": true
		}
	},
	"HookHandlers": {
		"main": {
			"class": "MediaWiki\\Extension\\FFI\\MediaWiki\\HookHandler",
			"services": [
				"FFI.EngineFactory",
				"FFI.ScriptFactory"
			]
		}
	},
	"Hooks": {
		"EditFilterMergedContent": "main",
		"EditPageBeforeEditButtons": "main",
		"CodeEditorGetPageLanguage": "MediaWiki\\Extension\\FFI\\MediaWiki\\LegacyHooks::onCodeEditorGetPageLanguage",
		"ParserFirstCallInit": "main"
	},
	"MessagesDirs": {
		"FFI": [
			"i18n"
		]
	},
	"ResourceFileModulePaths": {
		"localBasePath": "modules",
		"remoteExtPath": "FFI/modules"
	},
	"ResourceModules": {
		"ext.ffi.ui": {
			"styles": "ext.ffi.ui.css"
		}
	},
	"ServiceWiringFiles": [
		"FFI.wiring.php"
	],
	"TrackingCategories": [
		"ffi-error-category"
	],
	"callback": "MediaWiki\\Extension\\FFI\\MediaWiki\\LegacyHooks::onRegistration",
	"manifest_version": 2
}
